{
    "configurations": [
        {
            "name": "(Linux / MacOS) Launch sqlite / sqlite3",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/vscode/source/sqlite/sqlite3",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                    {
                        "description": "Set Disassembly Flavor to Intel",
                        "text": "-gdb-set disassembly-flavor intel",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            }
        },
        {
            "name": "(Windows) Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "(Windows) Launch sqlite / sqlite3",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/vscode/source/sqlite/${command:cmake.buildType}/sqlite3.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "integratedTerminal"
        }
    ]
}